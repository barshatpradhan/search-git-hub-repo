{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/src/server.ts" },
    { "src": "/(.*)", "dest": "Frontend/dist/$1" }
  ],
  "framework": "vite",
  "buildCommand": "cd Frontend && npm run build",
  "outputDirectory": "Frontend/dist"
}
